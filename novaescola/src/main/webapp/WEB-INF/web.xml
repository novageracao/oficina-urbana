<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>br.edu.ifpi.novaescola.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>know-more</servlet-name>
        <servlet-class>br.edu.ifpi.novaescola.KnowMoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>know-more</servlet-name>
        <url-pattern>/saber-mais</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>quem-somos</servlet-name>
        <servlet-class>br.edu.ifpi.novaescola.AboutUsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>quem-somos</servlet-name>
        <url-pattern>/quem-somos</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>getengaged</servlet-name>
        <servlet-class>br.edu.ifpi.novaescola.GetEngagedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getengaged</servlet-name>
        <url-pattern>/colaborar</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>blog</servlet-name>
        <servlet-class>br.edu.ifpi.novaescola.BlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>blog</servlet-name>
        <url-pattern>/blog</url-pattern>
    </servlet-mapping>
        
    <servlet>
        <servlet-name>feira-de-ciencias-integrada</servlet-name>
        <servlet-class>br.edu.ifpi.novaescola.ScienceFairServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>feira-de-ciencias-integrada</servlet-name>
        <url-pattern>/primeira-feira-de-ciencias-integrada</url-pattern>
    </servlet-mapping>
    
    <!-- <welcome-file-list>
    	<welcome-file>index.html</welcome-file>
    </welcome-file-list> -->
    
    <filter>
      <filter-name>ObjectifyFilter</filter-name>
      <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>ObjectifyFilter</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
      <listener-class>br.edu.ifpi.novaescola.OfyHelper</listener-class>
    </listener>
<!-- [END Objectify] -->
</web-app>
